<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/resetPasswordInstructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/estiloletra2"
        android:paddingBottom="8dp"
        android:text="Ingrese su nueva contrase単a"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <EditText
        android:id="@+id/txtNuevaContrasena"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/caja"
        android:hint="Nueva Contrase単a"
        android:inputType="textPassword"
        android:paddingStart="10sp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/resetPasswordInstructionText"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btnRestablecerContrasena"
        android:layout_width="180dp"
        android:layout_height="67dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="124dp"
        android:background="@drawable/btnregistro_background"
        android:text="Restablecer Contrase単a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/txtConfirmarNuevaContrasena"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/caja"
        android:hint="Confirmar Contrase単a"
        android:inputType="textPassword"
        android:paddingStart="10sp"
        android:paddingTop="10sp
"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNuevaContrasena"
        tools:layout_editor_absoluteX="4dp" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="219dp"
        android:layout_height="270dp"
        android:layout_marginStart="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perro" />

</androidx.constraintlayout.widget.ConstraintLayout>